
@model PART1.Pages.donations.MoneyDonViewModel
<header>
    <div class=" navbar-collapse collapse d-sm-inline-flex justify-content-between">
    
    <ul class="navbar-nav flex-grow-1">
    
    <li class="nav-item">
        <a class="heading" asp-area="" asp-page="/MonetaryDonIndex">Monetary Donations</a>
    </li>

    <li class="nav-item">
        <a class="heading" asp-area="" asp-page="/ChoiceIndex">CHOICES</a>
    </li>
    </ul>
    </div>
</header>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MonetaryDonation[0].Date)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.MonetaryDonation[0].Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.MonetaryDonation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
