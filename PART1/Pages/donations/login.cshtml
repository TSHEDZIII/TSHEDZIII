
@model PART1.Pages.donations.loginModel

<h4 class="heading">LOGIN</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="label">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LOGIN.USERNAME" class="control-label">Enter username:</label>
                <input asp-for="LOGIN.USERNAME" class="form-control" />
                <span asp-validation-for="LOGIN.USERNAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LOGIN.PASSWORD" class="control-label">Enter password:</label>
                <input asp-for="LOGIN.PASSWORD" class="form-control" />
                <span asp-validation-for="LOGIN.PASSWORD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="LOG-IN" class="btn-purple" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="REGIndex">Don't have an Account? Register here</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
